<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/background_light"
    tools:context="app.alcaldiaitagui.Fragments.DatosContacto">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"


        android:id="@+id/toolbar">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="?android:attr/selectableItemBackground"
            tools:ignore="UseCompoundDrawables,UselessParent">

            <ImageView
                android:id="@+id/regresar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/regresa1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Concurso"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:id="@+id/mytext"
                android:textSize="19dp" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>



    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_fondo"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gánate la camiseta de Itagüí Leónes"
                android:gravity="center_horizontal"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingBottom="3dp"/>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                    <EditText
                        android:fontFamily="sans-serif"
                        android:id="@+id/nombre"
                        style="@style/editText_style"
                        android:inputType="textEmailAddress"
                        android:hint="Nombre Completo"
                        android:layout_gravity="center"/>

                    <EditText
                        android:fontFamily="sans-serif"
                        android:id="@+id/documento"
                        style="@style/editText_style"
                        android:inputType="number"
                        android:hint="Documento"
                        android:layout_gravity="center"/>
                    <EditText
                        android:fontFamily="sans-serif"
                        android:id="@+id/correo"
                        style="@style/editText_style"
                        android:inputType="textEmailAddress"
                        android:hint="correo"
                        android:layout_gravity="center"/>

                    <EditText
                        android:fontFamily="sans-serif"
                        android:id="@+id/barrio"
                        style="@style/editText_style"

                        android:hint="Barrio o Vereda"
                        android:layout_gravity="center"/>
                    <EditText
                        android:fontFamily="sans-serif"
                        android:id="@+id/telefono"
                        style="@style/editText_style"
                        android:inputType="number"
                        android:hint="Teléfono"
                        android:layout_gravity="center"/>
                    <Button
                        android:id="@+id/ingresar"
                        style="@style/button_style"
                        android:text="Enviar Registro"
                        android:textAllCaps="false"/>





                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>

